<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/tvShippingNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/colorWhite"
            android:text="Name: "/>

        <TextView
            android:id="@+id/tvShippingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/colorWhite"
            android:layout_toRightOf="@+id/tvShippingNameText"/>

        <TextView
            android:id="@+id/tvShippingPhoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/colorWhite"
            android:text="Phone: "
            android:layout_below="@id/tvShippingName"/>

        <TextView
            android:id="@+id/tvShippingPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/colorWhite"
            android:layout_toRightOf="@+id/tvShippingPhoneText"
            android:layout_below="@id/tvShippingName"/>

        <TextView
            android:id="@+id/tvShippingDateTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/colorWhite"
            android:text="Ordered on: "
            android:layout_below="@id/tvShippingPhone"/>

        <TextView
            android:id="@+id/tvShippingDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/colorWhite"
            android:layout_toRightOf="@+id/tvShippingDateTimeText"
            android:layout_below="@id/tvShippingPhone"/>

        <TextView
            android:id="@+id/tvShippingStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/colorWhite"
            android:text="Status: "
            android:layout_below="@id/tvShippingDateTime"/>

        <TextView
            android:id="@+id/tvShippingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/colorWhite"
            android:layout_toRightOf="@+id/tvShippingStatusText"
            android:layout_below="@id/tvShippingDateTime"/>

        <View
            android:id="@+id/vShippingDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@android:color/white"
            android:layout_below="@id/tvShippingStatus"/>

        <TextView
            android:id="@+id/tvShippingAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="Address"
            android:layout_below="@+id/vShippingDivider"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="RM"
            android:layout_toLeftOf="@+id/tvShippingTotalPrice"/>

        <TextView
            android:id="@+id/tvShippingTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="0.00"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>